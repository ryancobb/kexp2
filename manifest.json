{
  "manifest_version": 2,

  "name": "KEXP Stream",
  "icons": {
    "128": "assets/icons/KEXP.png"
  },

  "description": "A simple extension to listen to the 128k KEXP radio stream.",
  "version": "0.2",

  "background": {
    "scripts": ["src/js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "/assets/icons/KEXP.png",
    "default_popup": "/src/popup.html"
  },
  "permissions": [
    "https://ajax.googleapis.com/",
    "http://kexp.org/*/"
  ]
}
